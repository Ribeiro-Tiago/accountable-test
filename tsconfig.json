{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"allowJs": false,
		"noImplicitAny": false,
		"strict": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"removeComments": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"strictNullChecks": false
	},
	"include": [
		"./src/**/*", "api.js"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.spec.ts"
	]
}
